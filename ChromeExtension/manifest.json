{
    "manifest_version": 2,

    "name": "PyBCY",
    "description": "Call PyBCY To Download Current Page",
    "version": "1.0",
    "options_page": "options.html",
    "background": {
       "scripts": ["background.js"],
       "persistent": false
     },
     "browser_action" :
     {
       "default_icon" : "icon.png",
       "default_title" : "Call PyBCY To Download Current Page!"
     },
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent"
    ]
}
